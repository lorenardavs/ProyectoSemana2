<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContenidoMainActivity"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/title_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Datos"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txt_titnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/title_form"/>
    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        android:layout_toRightOf="@id/txt_titnombre"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/title_form"/>

    <TextView
        android:id="@+id/txt_titfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/txt_titnombre"
        android:layout_toRightOf="@id/txt_titfecha"/>
    <TextView
        android:id="@+id/txt_fecha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        android:layout_toRightOf="@id/txt_titfecha"
        android:layout_below="@id/txt_nombre"
        android:layout_marginLeft="63dp"/>

    <TextView
        android:id="@+id/txt_titelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/txt_titfecha"/>
    <TextView
        android:id="@+id/txt_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="1234"
        android:layout_toRightOf="@id/txt_titelefono"
        android:layout_below="@id/txt_fecha2"
        android:layout_marginLeft="36dp" />

    <TextView
        android:id="@+id/txt_titemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@id/txt_titelefono"/>
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="correo@correo.com"
        android:layout_toRightOf="@id/txt_titemail"
        android:layout_below="@id/txt_telefono"
        android:layout_marginLeft="65dp" />

    <TextView
        android:id="@+id/txt_titdescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/txt_email"/>
    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Descripcion de prueba"
        android:layout_toRightOf="@id/txt_titdescripcion"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="10dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar datos"
        android:onClick="OnclickEditar"
        android:layout_marginTop="320dp"
        android:layout_below="@id/txt_titdescripcion"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"/>

</RelativeLayout>